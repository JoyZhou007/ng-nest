{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "module": "esnext",
    "paths": {
      "ng-moon": ["./libraries/ng-moon/src/ng-moon.module.ts"],
      "ng-moon/*": ["./libraries/ng-moon/src/*"]
    }
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/environments/environment.prod.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
